<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- 明确禁用HTTPS升级策略 -->
    <meta http-equiv="Content-Security-Policy" content="default-src 'self' 'unsafe-inline' 'unsafe-eval' data: http: https:; img-src 'self' data: http: https:; font-src 'self' data: http: https:;">
    <title><%= title %> - <%= config.app.name %></title>

    <!-- Bootstrap CSS -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="/css/fontawesome.all.min.css" rel="stylesheet">
    <link href="/css/fontawesome-fix.css" rel="stylesheet">

    <!-- 自定义CSS -->
    <link href="/css/main.css" rel="stylesheet">

    <!-- 页面特定CSS -->
    <% if (typeof pageCSS !== 'undefined') { %>
        <% pageCSS.forEach(css => { %>
            <link href="<%= css %>" rel="stylesheet">
        <% }) %>
    <% } %>
</head>
<body>
    <!-- 导航栏 -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <i class="fas fa-gamepad me-2"></i>
                <%= config.app.name %>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">

                    <!-- 大陆选择 - 非管理员必须选择，管理员可选 -->
                    <% if (user) { %>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle <%= !selectedProject && user.role !== 'admin' ? 'text-warning' : '' %>"
                               href="#" id="projectSelector" role="button" data-bs-toggle="dropdown"
                               data-bs-toggle="tooltip" data-bs-placement="bottom"
                               title="<%= selectedProject ? '当前大陆: ' + selectedProject.name : '选择要探险的大陆' %>">
                                <i class="fas fa-globe me-1"></i>
                                <%= selectedProject ? selectedProject.name : '选择大陆' %>
                                <% if (!selectedProject && user.role !== 'admin') { %>
                                    <i class="fas fa-exclamation-triangle ms-1 text-warning"></i>
                                <% } %>
                            </a>
                            <ul class="dropdown-menu">
                                <li><h6 class="dropdown-header">可用大陆</h6></li>
                                <% if (typeof userProjects !== 'undefined' && userProjects && userProjects.length > 0) { %>
                                    <% userProjects.forEach(project => { %>
                                        <li>
                                            <a class="dropdown-item <%= selectedProject && selectedProject.id === project.id ? 'active' : '' %>"
                                               href="/select-project/<%= project.id %>">
                                                <i class="fas fa-map me-2"></i>
                                                <%= project.name %>
                                                <% if (selectedProject && selectedProject.id === project.id) { %>
                                                    <i class="fas fa-check ms-2 text-success"></i>
                                                <% } %>
                                            </a>
                                        </li>
                                    <% }) %>
                                <% } else { %>
                                    <li><span class="dropdown-item-text text-muted">暂无可用大陆</span></li>
                                    <% if (user.role !== 'admin') { %>
                                        <li><span class="dropdown-item-text text-muted small">请联系管理员加入项目</span></li>
                                    <% } %>
                                <% } %>
                                <% if (selectedProject) { %>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item text-danger" href="/clear-project">
                                            <i class="fas fa-times me-2"></i>
                                            清除选择
                                        </a>
                                    </li>
                                <% } %>
                            </ul>
                        </li>
                    <% } %>

                    <!-- 项目相关功能 - 只有选择了大陆才显示 -->
                    <% if (user && selectedProject) { %>
                        <li class="nav-item">
                            <a class="nav-link <%= currentUrl.startsWith('/dashboard') ? 'active' : '' %>" href="/dashboard"
                               data-bs-toggle="tooltip" data-bs-placement="bottom" title="冒险者大厅 - 查看整体状况">
                                <i class="fas fa-home me-1"></i>
                                勇者大厅
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link <%= currentUrl.startsWith('/tasks') ? 'active' : '' %>" href="/tasks"
                               data-bs-toggle="tooltip" data-bs-placement="bottom" title="酒馆 - 任务委托市场">
                                <i class="fas fa-beer me-1"></i>
                                酒馆
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link <%= currentUrl.startsWith('/sprints') ? 'active' : '' %>" href="/sprints"
                               data-bs-toggle="tooltip" data-bs-placement="bottom" title="探险季 - 冒险周期管理">
                                <i class="fas fa-calendar-alt me-1"></i>
                                探险季
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link <%= currentUrl.startsWith('/leaderboard') ? 'active' : '' %>" href="/leaderboard"
                               data-bs-toggle="tooltip" data-bs-placement="bottom" title="荣誉殿堂 - 冒险者排名">
                                <i class="fas fa-crown me-1"></i>
                                荣誉殿堂
                            </a>
                        </li>
                    <% } %>

                    <!-- 管理员专用功能 - 始终显示 -->
                    <% if (user && user.role === 'admin') { %>
                        <li class="nav-item">
                            <a class="nav-link <%= currentUrl.startsWith('/projects') ? 'active' : '' %>" href="/projects"
                            data-bs-toggle="tooltip" data-bs-placement="bottom" title="大陆 - 探险项目管理">
                                <i class="fas fa-map me-1"></i>
                                大陆
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link <%= currentUrl.startsWith('/organizations') ? 'active' : '' %>" href="/organizations"
                               data-bs-toggle="tooltip" data-bs-placement="bottom" title="公会 - 组织管理">
                                <i class="fas fa-shield-alt me-1"></i>
                                公会
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link <%= currentUrl.startsWith('/users') ? 'active' : '' %>" href="/users"
                               data-bs-toggle="tooltip" data-bs-placement="bottom" title="冒险者 - 人员管理">
                                <i class="fas fa-users me-1"></i>
                                勇者
                            </a>
                        </li>
                    <% } %>
                </ul>

                <ul class="navbar-nav">
                    <% if (user) { %>
                        <!-- 用户钱包 -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="walletDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-wallet me-1"></i>
                                钱包
                            </a>
                            <ul class="dropdown-menu">
                                <li><h6 class="dropdown-header">我的资产</h6></li>
                                <li>
                                    <span class="dropdown-item-text">
                                        <i class="fas fa-gem text-info me-1"></i>
                                        钻石: <span class="badge bg-info" id="diamond-balance">0</span>
                                    </span>
                                </li>
                                <li>
                                    <span class="dropdown-item-text">
                                        <i class="fas fa-coins text-warning me-1"></i>
                                        金币: <span class="badge bg-warning" id="gold-balance">0</span>
                                    </span>
                                </li>
                                <li>
                                    <span class="dropdown-item-text">
                                        <i class="fas fa-circle text-secondary me-1"></i>
                                        银币: <span class="badge bg-secondary" id="silver-balance">0</span>
                                    </span>
                                </li>
                                <li>
                                    <span class="dropdown-item-text">
                                        <i class="fas fa-circle text-dark me-1"></i>
                                        铜币: <span class="badge bg-dark" id="copper-balance">0</span>
                                    </span>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="/wallet">查看详情</a></li>
                            </ul>
                        </li>

                        <!-- 用户菜单 -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-user me-1"></i>
                                <%= user.firstName %>
                                <span class="badge bg-<%= user.skillLevel === 'diamond' ? 'info' : user.skillLevel === 'gold' ? 'warning' : user.skillLevel === 'silver' ? 'secondary' : user.skillLevel === 'bronze' ? 'dark' : 'light' %> ms-1">
                                    <% if (user.skillLevel === 'diamond') { %>💎
                                    <% } else if (user.skillLevel === 'gold') { %>🥇
                                    <% } else if (user.skillLevel === 'silver') { %>🥈
                                    <% } else if (user.skillLevel === 'bronze') { %>🥉
                                    <% } else { %>🔰<% } %>
                                </span>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/profile">个人资料</a></li>
                                <li><a class="dropdown-item" href="/achievements">我的成就</a></li>
                                <li><a class="dropdown-item" href="/settings">设置</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="/logout">退出登录</a></li>
                            </ul>
                        </li>
                    <% } else { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/login">登录</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/register">注册</a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>

    <!-- 主要内容 -->
    <main class="container-fluid py-4">
        <!-- 消息提示 -->
        <div id="alerts-container"></div>
