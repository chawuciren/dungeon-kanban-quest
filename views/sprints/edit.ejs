<%- include('../partials/header') %>

<!-- 页面标题 -->
<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2>
                    <i class="fas fa-edit me-2 text-primary"></i>
                    编辑迭代
                </h2>
                <p class="text-muted mb-0">修改探险周期的目标和时间安排</p>
            </div>
            <div>
                <a href="/sprints/<%= sprint.id %>" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>
                    返回详情
                </a>
            </div>
        </div>
    </div>
</div>

<!-- 编辑表单 -->
<div class="row">
    <div class="col-lg-8 mx-auto">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-calendar-alt me-2"></i>
                    迭代信息
                </h5>
            </div>
            <div class="card-body">
                <form method="POST" action="/sprints/<%= sprint.id %>/edit" id="editSprintForm">
                    <!-- 基本信息 -->
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="name" class="form-label">
                                <i class="fas fa-tag me-1"></i>
                                迭代名称 <span class="text-danger">*</span>
                            </label>
                            <input type="text" class="form-control" id="name" name="name"
                                   value="<%= sprint.name %>" placeholder="例如：迭代 - 用户系统建设" required>
                            <div class="form-text">建议包含季节和主要目标</div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">
                                <i class="fas fa-map me-1"></i>
                                所属项目
                            </label>
                            <div class="form-control-plaintext bg-light border rounded px-3 py-2">
                                <i class="fas fa-globe me-2 text-primary"></i>
                                [<%= sprint.project.key %>] <%= sprint.project.name %>
                            </div>
                            <div class="form-text">当前迭代所属的项目</div>
                        </div>
                    </div>

                    <!-- 迭代目标 -->
                    <div class="mb-3">
                        <label for="goal" class="form-label">
                            <i class="fas fa-bullseye me-1"></i>
                            迭代目标 <span class="text-danger">*</span>
                        </label>
                        <textarea class="form-control" id="goal" name="goal" rows="3"
                                  placeholder="描述这个迭代要达成的主要目标..." required><%= sprint.goal %></textarea>
                        <div class="form-text">明确的目标有助于团队聚焦重点</div>
                    </div>

                    <!-- 详细描述 -->
                    <div class="mb-3">
                        <label for="description" class="form-label">
                            <i class="fas fa-align-left me-1"></i>
                            详细描述
                        </label>
                        <textarea class="form-control" id="description" name="description" rows="4"
                                  placeholder="详细描述迭代的背景、范围和期望..."><%= sprint.description || '' %></textarea>
                    </div>

                    <!-- 时间安排 -->
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="startDate" class="form-label">
                                <i class="fas fa-play me-1"></i>
                                开始时间 <span class="text-danger">*</span>
                            </label>
                            <input type="date" class="form-control" id="startDate" name="startDate" 
                                   value="<%= moment(sprint.startDate).format('YYYY-MM-DD') %>" required>
                            <% if (sprint.status === 'active') { %>
                                <div class="form-text text-warning">
                                    <i class="fas fa-exclamation-triangle me-1"></i>
                                    迭代已开始，修改开始时间需谨慎
                                </div>
                            <% } %>
                        </div>
                        <div class="col-md-6">
                            <label for="endDate" class="form-label">
                                <i class="fas fa-stop me-1"></i>
                                结束时间 <span class="text-danger">*</span>
                            </label>
                            <input type="date" class="form-control" id="endDate" name="endDate" 
                                   value="<%= moment(sprint.endDate).format('YYYY-MM-DD') %>" required>
                        </div>
                    </div>

                    <!-- 容量设置 -->
                    <div class="mb-3">
                        <label for="capacity" class="form-label">
                            <i class="fas fa-hourglass-half me-1"></i>
                            团队容量（工时）
                        </label>
                        <div class="input-group">
                            <input type="number" class="form-control" id="capacity" name="capacity"
                                   min="0" step="0.5" value="<%= sprint.capacity || '' %>" placeholder="例如：80">
                            <span class="input-group-text">小时</span>
                        </div>
                        <div class="form-text">团队在此迭代期间可投入的总工时</div>
                    </div>

                    <!-- 状态提示 -->
                    <% if (sprint.status === 'active') { %>
                        <div class="alert alert-warning mb-4">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>注意：</strong>此迭代正在进行中，修改基本信息可能会影响团队的工作安排。
                        </div>
                    <% } %>

                    <!-- 时间计算显示 -->
                    <div class="mb-4">
                        <div class="alert alert-info" id="durationInfo" style="display: none;">
                            <i class="fas fa-info-circle me-2"></i>
                            <span id="durationText"></span>
                        </div>
                    </div>

                    <!-- 提交按钮 -->
                    <div class="d-flex justify-content-end gap-2">
                        <a href="/sprints/<%= sprint.id %>" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-2"></i>
                            取消
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>
                            保存修改
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const startDateInput = document.getElementById('startDate');
    const endDateInput = document.getElementById('endDate');
    const durationInfo = document.getElementById('durationInfo');
    const durationText = document.getElementById('durationText');

    // 计算并显示持续时间
    function updateDuration() {
        const startDate = new Date(startDateInput.value);
        const endDate = new Date(endDateInput.value);

        if (startDate && endDate && startDate < endDate) {
            const diffTime = Math.abs(endDate - startDate);
            const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));

            durationText.textContent = `迭代持续时间：${diffDays} 天`;
            durationInfo.style.display = 'block';

            // 如果时间过长或过短，给出提示
            if (diffDays > 28) {
                durationInfo.className = 'alert alert-warning';
                durationText.textContent += ' (建议迭代不超过4周)';
            } else if (diffDays < 7) {
                durationInfo.className = 'alert alert-warning';
                durationText.textContent += ' (建议迭代至少1周)';
            } else {
                durationInfo.className = 'alert alert-info';
            }
        } else {
            durationInfo.style.display = 'none';
        }
    }

    // 监听时间变化
    startDateInput.addEventListener('change', updateDuration);
    endDateInput.addEventListener('change', updateDuration);

    // 初始计算
    updateDuration();

    // 表单验证
    document.getElementById('editSprintForm').addEventListener('submit', function(e) {
        const startDate = new Date(startDateInput.value);
        const endDate = new Date(endDateInput.value);

        if (startDate >= endDate) {
            e.preventDefault();
            alert('结束时间必须晚于开始时间');
            return false;
        }

        const diffTime = Math.abs(endDate - startDate);
        const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));

        if (diffDays > 42) {
            if (!confirm('迭代持续时间超过6周，这可能会影响团队的专注度。确定要继续吗？')) {
                e.preventDefault();
                return false;
            }
        }

        // 如果是进行中的迭代，额外确认
        <% if (sprint.status === 'active') { %>
            if (!confirm('此迭代正在进行中，确定要保存修改吗？这可能会影响团队的工作安排。')) {
                e.preventDefault();
                return false;
            }
        <% } %>
    });
});
</script>

<style>
.form-label {
    font-weight: 600;
    color: #495057;
}

.form-text {
    font-size: 0.875rem;
    color: #6c757d;
}

.card-header {
    background-color: #f8f9fa;
    border-bottom: 1px solid #dee2e6;
}

.input-group-text {
    background-color: #e9ecef;
    border-color: #ced4da;
}

.alert {
    border-radius: 8px;
}

.btn {
    border-radius: 6px;
    font-weight: 500;
}
</style>

<%- include('../partials/footer') %>
