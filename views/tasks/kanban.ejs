<script>
$(document).ready(function() {
    // åˆå§‹åŒ–æ‹–æ‹½åŠŸèƒ½
    initDragAndDrop();

    // ä»»åŠ¡å¡ç‰‡ç‚¹å‡»äº‹ä»¶
    $('.kanban-card').click(function(e) {
        if (!$(e.target).closest('a').length) {
            const taskId = $(this).data('task-id');
            window.location.href = `/tasks/${taskId}`;
