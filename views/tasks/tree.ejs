                if (window.KanbanApp && window.KanbanApp.showAlert) {
                    KanbanApp.showAlert('æ²¡æœ‰å­ä»»åŠ¡', 'info', 2000);
                }
            }
        })
        .fail(function() {
            $parentNode.find('.loading-subtasks').remove();
            if (window.KanbanApp && window.KanbanApp.showAlert) {
                KanbanApp.showAlert('åŠ è½½å­ä»»åŠ¡å¤±è´¥', 'danger');
            } else {
