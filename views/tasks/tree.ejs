function toggleArchiveTask(taskId, isArchive) {
    const action = isArchive ? 'å½’æ¡£' : 'å–æ¶ˆå½’æ¡£';
    const confirmMessage = isArchive
        ? 'ç¡®å®šè¦å½’æ¡£æ­¤ä»»åŠ¡å—ï¼Ÿ\n\nå½’æ¡£åçš„ä»»åŠ¡å°†ä»å¸¸è§„è§†å›¾ä¸­éšè—ï¼Œéœ€è¦åœ¨ç­›é€‰å™¨ä¸­é€‰æ‹©"å·²å½’æ¡£"æ‰èƒ½æŸ¥çœ‹ã€‚'
