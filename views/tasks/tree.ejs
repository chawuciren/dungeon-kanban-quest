            // å…¨éƒ¨æŠ˜å 
            $('#collapseAll').click(function() {
                $('.node-children').hide();
                $('.node-toggle').removeClass('expanded');
                $('.node-toggle i').removeClass('fa-chevron-down').addClass('fa-chevron-right');
            });

            // èŠ‚ç‚¹å±•å¼€/æŠ˜å 
            $(document).on('click', '.node-toggle:not(.no-children)', function(e) {
                e.stopPropagation();
