<%- include('../partials/header') %>
<%- include('../helpers/roleHelper') %>

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- 页面标题 -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0">
                    <% if (isCreateMode) { %>
                        <i class="fas fa-user-plus me-2"></i>
                        招募勇者
                    <% } else { %>
                        <i class="fas fa-user-edit me-2"></i>
                        编辑勇者档案
                    <% } %>
                </h1>
                <a href="/users" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i>
                    返回名册
                </a>
            </div>

            <!-- 用户信息卡片 (仅编辑模式显示) -->
            <% if (!isCreateMode && editUser) { %>
            <div class="card mb-4">
                <div class="card-header">
                    <div class="d-flex align-items-center">
                        <div class="avatar-circle me-3">
                            <% if (editUser.avatar) { %>
                                <img src="<%= editUser.avatar %>" alt="<%= editUser.getFullName() %>" class="rounded-circle" width="50" height="50">
                            <% } else { %>
                                <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                    <h5 class="mb-0"><%= editUser.firstName.charAt(0).toUpperCase() %></h5>
                                </div>
                            <% } %>
                        </div>
                        <div>
                            <h5 class="card-title mb-0"><%= editUser.getFullName() %></h5>
                            <p class="text-muted mb-0">@<%= editUser.username %> • <%= editUser.email %></p>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <strong>当前职业：</strong><br>
                            <%- renderRoleBadge(editUser.role, true) %>
                        </div>
                        <div class="col-md-3">
                            <strong>技能等级：</strong><br>
                            <span class="badge bg-<%= editUser.skillLevel === 'diamond' ? 'info' : editUser.skillLevel === 'gold' ? 'warning' : editUser.skillLevel === 'silver' ? 'secondary' : editUser.skillLevel === 'bronze' ? 'dark' : 'light' %>">
                                <% if (editUser.skillLevel === 'diamond') { %>💎 钻石
                                <% } else if (editUser.skillLevel === 'gold') { %>🥇 黄金
                                <% } else if (editUser.skillLevel === 'silver') { %>🥈 白银
                                <% } else if (editUser.skillLevel === 'bronze') { %>🥉 青铜
                                <% } else { %>🔰 新手<% } %>
                            </span>
                        </div>
                        <div class="col-md-3">
                            <strong>账户状态：</strong><br>
                            <span class="badge bg-<%= editUser.status === 'active' ? 'success' : editUser.status === 'inactive' ? 'warning' : 'danger' %>">
                                <% if (editUser.status === 'active') { %>✅ 活跃
                                <% } else if (editUser.status === 'inactive') { %>⏸️ 未激活
                                <% } else { %>🚫 已禁用<% } %>
                            </span>
                        </div>
                        <div class="col-md-3">
                            <strong>注册时间：</strong><br>
                            <span class="text-muted"><%= moment(editUser.createdAt).format('YYYY-MM-DD') %></span>
                        </div>
                    </div>

                    <% if (editUser.wallet) { %>
                        <hr>
                        <div class="row">
                            <div class="col-12">
                                <strong>钱包余额：</strong>
                                <div class="d-flex gap-3 mt-2">
                                    <span class="badge bg-info">💎 <%= editUser.wallet.diamondBalance %></span>
                                    <span class="badge bg-warning">🥇 <%= editUser.wallet.goldBalance %></span>
                                    <span class="badge bg-secondary">🥈 <%= editUser.wallet.silverBalance %></span>
                                    <span class="badge bg-dark">🥉 <%= editUser.wallet.copperBalance %></span>
                                </div>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
            <% } %>

            <!-- 用户表单 -->
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <% if (isCreateMode) { %>
                            勇者档案
                        <% } else { %>
                            编辑用户信息
                        <% } %>
                    </h5>
                </div>
                <div class="card-body">
                    <form method="POST" action="<% if (isCreateMode) { %>/users/create<% } else { %>/users/<%= editUser.id %>/edit<% } %>">
                        <div class="row">
                            <!-- 基本信息 -->
                            <div class="col-md-6">
                                <h6 class="text-muted mb-3">基本信息</h6>

                                <div class="mb-3">
                                    <label for="firstName" class="form-label">姓名 <span class="text-danger">*</span></label>
                                    <div class="row">
                                        <div class="col-6">
                                            <input type="text" class="form-control" id="firstName" name="firstName"
                                                   value="<% if (!isCreateMode && editUser) { %><%= editUser.firstName %><% } %>" placeholder="姓" required>
                                        </div>
                                        <div class="col-6">
                                            <input type="text" class="form-control" id="lastName" name="lastName"
                                                   value="<% if (!isCreateMode && editUser) { %><%= editUser.lastName %><% } %>" placeholder="名" required>
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label for="username" class="form-label">用户名 <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="username" name="username"
                                           value="<% if (!isCreateMode && editUser) { %><%= editUser.username %><% } %>" placeholder="用户登录名" required>
                                    <div class="form-text">用户名只能包含字母和数字，3-50个字符</div>
                                </div>

                                <div class="mb-3">
                                    <label for="email" class="form-label">邮箱 <span class="text-danger">*</span></label>
                                    <input type="email" class="form-control" id="email" name="email"
                                           value="<% if (!isCreateMode && editUser) { %><%= editUser.email %><% } %>" placeholder="user@example.com" required>
                                </div>

                                <div class="mb-3">
                                    <label for="phone" class="form-label">手机号</label>
                                    <input type="tel" class="form-control" id="phone" name="phone"
                                           value="<% if (!isCreateMode && editUser) { %><%= editUser.phone || '' %><% } %>" placeholder="手机号码（可选）">
                                </div>

                                <div class="mb-3">
                                    <label for="password" class="form-label">
                                        <% if (isCreateMode) { %>
                                            密码 <span class="text-danger">*</span>
                                        <% } else { %>
                                            新密码
                                        <% } %>
                                    </label>
                                    <input type="password" class="form-control" id="password" name="password"
                                           placeholder="<% if (isCreateMode) { %>至少6位密码<% } else { %>留空则不修改密码<% } %>"
                                           <% if (isCreateMode) { %>required<% } %> minlength="6">
                                    <div class="form-text">
                                        <% if (isCreateMode) { %>
                                            密码长度至少6位
                                        <% } else { %>
                                            如需修改密码，请输入新密码（至少6位）
                                        <% } %>
                                    </div>
                                </div>
                            </div>

                            <!-- 角色和权限 -->
                            <div class="col-md-6">
                                <h6 class="text-muted mb-3">角色和权限</h6>

                                <div class="mb-3">
                                    <label for="role" class="form-label">职业角色 <span class="text-danger">*</span></label>
                                    <select class="form-select" id="role" name="role" required>
                                        <% if (isCreateMode) { %>
                                            <option value="">请选择职业</option>
                                        <% } %>
                                        <option value="guild_master" <% if (!isCreateMode && editUser && editUser.role === 'guild_master') { %>selected<% } %>>⚡ 神域守护者 (管理员)</option>
                                        <option value="quest_captain" <% if (!isCreateMode && editUser && editUser.role === 'quest_captain') { %>selected<% } %>>🔮 预言师 (产品经理)</option>
                                        <option value="swordsman" <% if (isCreateMode || (!isCreateMode && editUser && editUser.role === 'swordsman')) { %>selected<% } %>>⚔️ 剑士 (开发者)</option>
                                        <option value="ranger" <% if (!isCreateMode && editUser && editUser.role === 'ranger') { %>selected<% } %>>🏹 弓箭手 (测试员)</option>
                                        <option value="quest_giver" <% if (!isCreateMode && editUser && editUser.role === 'quest_giver') { %>selected<% } %>>💎 委托贵族 (客户)</option>
                                        <option value="enchanter" <% if (!isCreateMode && editUser && editUser.role === 'enchanter') { %>selected<% } %>>🔮 魔法师 (UI设计师)</option>
                                        <option value="alchemist" <% if (!isCreateMode && editUser && editUser.role === 'alchemist') { %>selected<% } %>>✨ 牧师 (运维工程师)</option>
                                    </select>
                                    <% if (isCreateMode) { %>
                                        <div class="form-text">
                                            <small>
                                                <strong>职业说明：</strong><br>
                                                • ⚡ 神域守护 (管理员)：拥有至高权限的神级存在，守护整个异世界<br>
                                                • 🔮 预言师 (产品经理)：预测和规划未来的神秘学者<br>
                                                • ⚔️ 剑士 (开发者)：挥剑斩敌的前线战斗专家，负责任务开发和实现<br>
                                                • 🏹 弓箭手 (测试员)：潜行探查、发现追踪隐患的专业侦察者，负责质量保证和测试<br>
                                                • 💎 委托贵族 (客户)：发布探险委托的尊贵赞助方<br>
                                                • ✨ 法师 (UI设计师)： 施展视觉魔法的艺术大师<br>
                                                • 🌙 牧师 (运维工程师)：维护神秘机械和设施的技术专家，负责系统运维<br>
                                            </small>
                                        </div>
                                    <% } %>
                                </div>

                                <div class="mb-3">
                                    <label for="skillLevel" class="form-label">技能等级</label>
                                    <select class="form-select" id="skillLevel" name="skillLevel">
                                        <option value="novice" <% if (isCreateMode || (!isCreateMode && editUser && editUser.skillLevel === 'novice')) { %>selected<% } %>>🔰 新手 - 初学者</option>
                                        <option value="bronze" <% if (!isCreateMode && editUser && editUser.skillLevel === 'bronze') { %>selected<% } %>>🥉 青铜 - 有一定经验</option>
                                        <option value="silver" <% if (!isCreateMode && editUser && editUser.skillLevel === 'silver') { %>selected<% } %>>🥈 白银 - 经验丰富</option>
                                        <option value="gold" <% if (!isCreateMode && editUser && editUser.skillLevel === 'gold') { %>selected<% } %>>🥇 黄金 - 技能精湛</option>
                                        <option value="diamond" <% if (!isCreateMode && editUser && editUser.skillLevel === 'diamond') { %>selected<% } %>>💎 钻石 - 顶级专家</option>
                                    </select>
                                    <div class="form-text">技能等级影响可接取的任务难度</div>
                                </div>

                                <div class="mb-3">
                                    <label for="status" class="form-label">账户状态</label>
                                    <select class="form-select" id="status" name="status">
                                        <option value="active" <% if (isCreateMode || (!isCreateMode && editUser && editUser.status === 'active')) { %>selected<% } %>>✅ 活跃 - 正常使用</option>
                                        <option value="inactive" <% if (!isCreateMode && editUser && editUser.status === 'inactive') { %>selected<% } %>>⏸️ 未激活 - 需要激活</option>
                                        <option value="suspended" <% if (!isCreateMode && editUser && editUser.status === 'suspended') { %>selected<% } %>>🚫 已禁用 - 禁止登录</option>
                                    </select>
                                </div>

                                <% if (isCreateMode) { %>
                                    <!-- 游戏化信息提示 -->
                                    <div class="alert alert-info">
                                        <h6 class="alert-heading">
                                            <i class="fas fa-gift me-1"></i>
                                            新用户福利
                                        </h6>
                                        <p class="mb-0">新用户将自动获得：</p>
                                        <ul class="mb-0 mt-2">
                                            <li>🥇 100金币 新手奖励</li>
                                            <li>🎯 完整的虚拟钱包</li>
                                            <li>📊 个人数据统计</li>
                                        </ul>
                                    </div>
                                <% } else { %>
                                    <!-- 危险操作区域 -->
                                    <div class="alert alert-warning">
                                        <h6 class="alert-heading">
                                            <i class="fas fa-exclamation-triangle me-1"></i>
                                            危险操作
                                        </h6>
                                        <div class="d-grid gap-2">
                                            <button type="button" class="btn btn-outline-warning btn-sm"
                                                    onclick="showResetPasswordModal()">
                                                <i class="fas fa-key me-1"></i>
                                                重置密码
                                            </button>
                                            <% if (editUser.id !== user.id) { %>
                                                <button type="button" class="btn btn-outline-danger btn-sm"
                                                        onclick="confirmDelete('<%= editUser.id %>', '<%= editUser.username %>')">
                                                    <i class="fas fa-ban me-1"></i>
                                                    禁用账户
                                                </button>
                                            <% } %>
                                        </div>
                                    </div>
                                <% } %>
                            </div>
                        </div>

                        <!-- 提交按钮 -->
                        <div class="row mt-4">
                            <div class="col-12">
                                <hr>
                                <div class="d-flex justify-content-end">
                                    <a href="/users" class="btn btn-secondary me-2">
                                        <i class="fas fa-times me-1"></i>
                                        取消
                                    </a>
                                    <button type="submit" class="btn btn-primary">
                                        <% if (isCreateMode) { %>
                                            <i class="fas fa-user-plus me-1"></i>
                                            招募勇者
                                        <% } else { %>
                                            <i class="fas fa-save me-1"></i>
                                            保存修改
                                        <% } %>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<% if (!isCreateMode) { %>
<!-- 重置密码模态框 -->
<div class="modal fade" id="resetPasswordModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">重置用户密码</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="POST" action="/users/<%= editUser.id %>/reset-password">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="newPassword" class="form-label">新密码</label>
                        <input type="password" class="form-control" id="newPassword" name="newPassword"
                               placeholder="请输入新密码" required minlength="6">
                        <div class="form-text">密码长度至少6位</div>
                    </div>
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-1"></i>
                        重置密码后，用户需要使用新密码重新登录。
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消</button>
                    <button type="submit" class="btn btn-warning">确认重置</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- 删除确认模态框 -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">确认禁用用户</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>确定要禁用用户 <strong id="deleteUsername"></strong> 吗？</p>
                <p class="text-muted small">禁用后用户将无法登录系统，但数据不会被删除。</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消</button>
                <form id="deleteForm" method="POST" style="display: inline;">
                    <button type="submit" class="btn btn-danger">确认禁用</button>
                </form>
            </div>
        </div>
    </div>
</div>
<% } %>

<script>
<% if (!isCreateMode) { %>
function showResetPasswordModal() {
    new bootstrap.Modal(document.getElementById('resetPasswordModal')).show();
}

function confirmDelete(userId, username) {
    document.getElementById('deleteUsername').textContent = username;
    document.getElementById('deleteForm').action = '/users/' + userId + '/delete';
    new bootstrap.Modal(document.getElementById('deleteModal')).show();
}
<% } %>

// 表单验证
document.addEventListener('DOMContentLoaded', function() {
    const form = document.querySelector('form');
    const usernameInput = document.getElementById('username');
    const emailInput = document.getElementById('email');
    const passwordInput = document.getElementById('password');
    const isCreateMode = <%= isCreateMode ? 'true' : 'false' %>;

    // 用户名验证
    usernameInput.addEventListener('input', function() {
        const value = this.value;
        const isValid = /^[a-zA-Z0-9]{3,50}$/.test(value);

        if (value && !isValid) {
            this.classList.add('is-invalid');
            this.setCustomValidity('用户名只能包含字母和数字，3-50个字符');
        } else {
            this.classList.remove('is-invalid');
            this.setCustomValidity('');
        }
    });

    // 密码强度提示（仅创建模式）
    if (isCreateMode && passwordInput) {
        passwordInput.addEventListener('input', function() {
            const value = this.value;
            const strength = getPasswordStrength(value);

            // 移除之前的提示
            const existingFeedback = this.parentNode.querySelector('.password-strength');
            if (existingFeedback) {
                existingFeedback.remove();
            }

            if (value) {
                const feedback = document.createElement('div');
                feedback.className = 'password-strength form-text';
                feedback.innerHTML = `密码强度: <span class="badge bg-${strength.color}">${strength.text}</span>`;
                this.parentNode.appendChild(feedback);
            }
        });
    }

    function getPasswordStrength(password) {
        if (password.length < 6) {
            return { color: 'danger', text: '太弱' };
        } else if (password.length < 8) {
            return { color: 'warning', text: '一般' };
        } else if (password.length >= 8 && /[A-Z]/.test(password) && /[0-9]/.test(password)) {
            return { color: 'success', text: '强' };
        } else {
            return { color: 'info', text: '中等' };
        }
    }
});
</script>

<%- include('../partials/footer') %>
