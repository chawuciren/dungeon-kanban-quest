<%- include('../partials/header', { title: title }) %>

<div class="row justify-content-center">
    <div class="col-lg-8">
            <!-- 页面标题 -->
            <div class="mb-4">
                <h2>
                    <i class="fas fa-plus me-2 text-primary"></i>
                    创建地下城（创建项目）
                </h2>
                <p class="text-muted mb-0">创建一个新的项目来管理任务和团队协作</p>
            </div>

            <!-- Flash消息 -->
            <% if (messages.error) { %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <%= messages.error %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            <% } %>
            <% if (messages.success) { %>
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>
                    <%= messages.success %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            <% } %>

            <!-- 创建表单 -->
            <div class="card">
                <div class="card-body">
                    <form action="/projects/create" method="POST" class="needs-validation" novalidate>
                        <!-- 基本信息 -->
                        <div class="row">
                            <div class="col-md-8 mb-3">
                                <label for="name" class="form-label">地下城名称 <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="name" name="name" required>
                                <div class="invalid-feedback">请输入地下城名称</div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="key" class="form-label">地下城标识 <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="key" name="key"
                                       placeholder="如：PROJ" style="text-transform: uppercase;" required>
                                <div class="form-text">用于任务编号，如：PROJ-001</div>
                                <div class="invalid-feedback">请输入地下城标识</div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12 mb-3">
                                <label for="description" class="form-label">地下城描述</label>
                                <textarea class="form-control" id="description" name="description" rows="4"
                                          placeholder="描述项目的目标、范围和主要内容"></textarea>
                            </div>
                        </div>

                        <!-- 项目属性 -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="organizationId" class="form-label">所属公会 <span class="text-danger">*</span></label>
                                <select class="form-select" id="organizationId" name="organizationId" required>
                                    <option value="">选择公会</option>
                                    <% organizations.forEach(org => { %>
                                        <option value="<%= org.id %>"><%= org.name %></option>
                                    <% }) %>
                                </select>
                                <div class="invalid-feedback">请选择公会</div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="projectType" class="form-label">地下城类型</label>
                                <select class="form-select" id="projectType" name="projectType">
                                    <option value="construction">🏗️ 开拓远征型（建设项目）</option>
                                    <option value="maintenance">🔧 守备巡逻型（维护项目）</option>
                                    <option value="research">🔬 秘境调查型（研发项目）</option>
                                    <option value="operation">⚙️ 商队贸易型（运营项目）</option>
                                </select>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label for="starLevel" class="form-label">地下城难度</label>
                                <select class="form-select" id="starLevel" name="starLevel">
                                    <option value="1">⭐ 一星 - 常规</option>
                                    <option value="2">⭐⭐ 二星 - 重要</option>
                                    <option value="3" selected>⭐⭐⭐ 三星 - 核心</option>
                                    <option value="4">⭐⭐⭐⭐ 四星 - 关键</option>
                                    <option value="5">⭐⭐⭐⭐⭐ 五星 - 战略</option>
                                </select>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="visibility" class="form-label">可见性</label>
                                <select class="form-select" id="visibility" name="visibility">
                                    <option value="private">🔒 私有 - 仅团队成员可见</option>
                                    <option value="public">🌐 公开 - 所有人可见</option>
                                </select>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="leaderId" class="form-label">地下城负责人</label>
                                <select class="form-select" id="leaderId" name="leaderId">
                                    <option value="">选择负责人（默认为创建者）</option>
                                    <!-- 这里可以动态加载组织成员 -->
                                </select>
                            </div>
                        </div>

                        <!-- 时间设置 -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="startDate" class="form-label">计划开始时间</label>
                                <input type="date" class="form-control" id="startDate" name="startDate">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="endDate" class="form-label">计划结束时间</label>
                                <input type="date" class="form-control" id="endDate" name="endDate">
                            </div>
                        </div>

                        <!-- 提交按钮 -->
                        <div class="row">
                            <div class="col-12">
                                <hr>
                                <div class="d-flex justify-content-between">
                                    <a href="/projects" class="btn btn-secondary">
                                        <i class="fas fa-arrow-left me-2"></i>返回
                                    </a>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-rocket me-2"></i>创建项目
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
    </div>
</div>

<script>
$(document).ready(function() {
    // 项目名称自动生成标识
    $('#name').on('input', function() {
        const name = $(this).val();
        if (name && !$('#key').val()) {
            // 简单的拼音转换逻辑（这里可以使用更复杂的拼音库）
            let key = name.replace(/[\u4e00-\u9fa5]/g, '').replace(/\s+/g, '').toUpperCase();
            if (!key) {
                // 如果没有英文字符，使用默认前缀
                key = 'PROJ';
            }
            $('#key').val(key.substring(0, 6));
        }
    });

    // 项目标识自动转大写
    $('#key').on('input', function() {
        $(this).val($(this).val().toUpperCase());
    });

    // 开始时间变化时，自动设置结束时间
    $('#startDate').change(function() {
        const startDate = new Date($(this).val());
        if (startDate && !$('#endDate').val()) {
            // 默认项目周期为3个月
            const endDate = new Date(startDate);
            endDate.setMonth(endDate.getMonth() + 3);
            $('#endDate').val(endDate.toISOString().split('T')[0]);
        }
    });

    // 表单验证
    $('form').on('submit', function(e) {
        const form = this;
        if (!form.checkValidity()) {
            e.preventDefault();
            e.stopPropagation();
        }
        form.classList.add('was-validated');
    });

    // 自动聚焦到第一个输入框
    $('#name').focus();
});
</script>

<%- include('../partials/footer') %>
