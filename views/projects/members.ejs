<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - ‰ªªÂä°ÁÆ°ÁêÜ</title>
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/fontawesome.all.min.css" rel="stylesheet">
    <link href="/css/fontawesome-fix.css" rel="stylesheet">
    <style>
        .member-card {
            transition: transform 0.2s;
        }
        .member-card:hover {
            transform: translateY(-2px);
        }
        .role-badge {
            font-size: 0.75rem;
            margin: 0.1rem;
        }
        .avatar-sm {
            width: 40px;
            height: 40px;
            object-fit: cover;
        }
    </style>
</head>
<body class="bg-light">
    <%- include('../partials/header') %>

    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-12">
                <!-- È°µÈù¢Ê†áÈ¢ò -->
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h2 class="mb-1">
                            <i class="fas fa-users text-primary me-2"></i>
                            <%= project.name %> - ÊàêÂëòÁÆ°ÁêÜ
                        </h2>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/projects">È°πÁõÆÁÆ°ÁêÜ</a></li>
                                <li class="breadcrumb-item"><a href="/projects/<%= project.id %>"><%= project.name %></a></li>
                                <li class="breadcrumb-item active">ÊàêÂëòÁÆ°ÁêÜ</li>
                            </ol>
                        </nav>
                    </div>
                    <div>
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addMemberModal">
                            <i class="fas fa-user-plus me-2"></i>Ê∑ªÂä†ÊàêÂëò
                        </button>
                        <a href="/projects/<%= project.id %>" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>ËøîÂõûÈ°πÁõÆ
                        </a>
                    </div>
                </div>

                <!-- ÊàêÂëòÂàóË°® -->
                <div class="row">
                    <% if (project.members && project.members.length > 0) { %>
                        <% project.members.forEach(member => { %>
                            <div class="col-md-6 col-lg-4 mb-4">
                                <div class="card member-card h-100">
                                    <div class="card-body">
                                        <div class="d-flex align-items-center mb-3">
                                            <% if (member.avatar) { %>
                                                <img src="<%= member.avatar %>" alt="<%= member.firstName %> <%= member.lastName %>"
                                                     class="rounded-circle avatar-sm me-3">
                                            <% } else { %>
                                                <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center me-3 avatar-sm">
                                                    <i class="fas fa-user text-white"></i>
                                                </div>
                                            <% } %>
                                            <div class="flex-grow-1">
                                                <h6 class="mb-1"><%= member.firstName %> <%= member.lastName %></h6>
                                                <small class="text-muted">@<%= member.username %></small>
                                            </div>
                                            <% if (member.id !== project.ownerId) { %>
                                                <button type="button" class="btn btn-sm btn-outline-danger"
                                                        onclick="removeMember('<%= member.id %>', '<%= member.firstName %> <%= member.lastName %>')">
                                                    <i class="fas fa-times"></i>
                                                </button>
                                            <% } %>
                                        </div>

                                        <!-- ËßíËâ≤Ê†áÁ≠æ -->
                                        <div class="mb-3">
                                            <% if (member.membership && member.membership.roles) { %>
                                                <% member.membership.roles.forEach(role => { %>
                                                    <%
                                                        const roleConfig = {
                                                            'admin': { name: 'ÁÆ°ÁêÜÂëò', color: 'danger' },
                                                            'product_manager': { name: '‰∫ßÂìÅÁªèÁêÜ', color: 'warning' },
                                                            'developer': { name: 'ÂºÄÂèëÂ∑•Á®ãÂ∏à', color: 'primary' },
                                                            'tester': { name: 'ÊµãËØïÂ∑•Á®ãÂ∏à', color: 'info' },
                                                            'ui_designer': { name: 'UIÂ∑•Á®ãÂ∏à', color: 'success' },
                                                            'devops': { name: 'ËøêÁª¥Â∑•Á®ãÂ∏à', color: 'dark' },
                                                            'client': { name: 'ÂÆ¢Êà∑', color: 'secondary' }
                                                        };
                                                        const config = roleConfig[role] || { name: role, color: 'secondary' };
                                                    %>
                                                    <span class="badge bg-<%= config.color %> role-badge">
                                                        <%= config.name %>
                                                    </span>
                                                <% }); %>
                                            <% } %>
                                        </div>

                                        <!-- ÊàêÂëò‰ø°ÊÅØ -->
                                        <div class="small text-muted">
                                            <div class="mb-1">
                                                <i class="fas fa-envelope me-1"></i>
                                                <%= member.email %>
                                            </div>
                                            <% if (member.membership && member.membership.joinedAt) { %>
                                                <div>
                                                    <i class="fas fa-calendar me-1"></i>
                                                    Âä†ÂÖ•Êó∂Èó¥Ôºö<%= new Date(member.membership.joinedAt).toLocaleDateString('zh-CN') %>
                                                </div>
                                            <% } %>
                                        </div>

                                        <!-- ÁâπÊÆäÊ†áËØÜ -->
                                        <% if (member.id === project.ownerId) { %>
                                            <div class="mt-2">
                                                <span class="badge bg-warning text-dark">
                                                    <i class="fas fa-crown me-1"></i>È°πÁõÆÊâÄÊúâËÄÖ
                                                </span>
                                            </div>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <div class="col-12">
                            <div class="text-center py-5">
                                <i class="fas fa-users fa-3x text-muted mb-3"></i>
                                <h5 class="text-muted">ÊöÇÊó†È°πÁõÆÊàêÂëò</h5>
                                <p class="text-muted">ÁÇπÂáª"Ê∑ªÂä†ÊàêÂëò"ÊåâÈíÆÈÇÄËØ∑ÊàêÂëòÂä†ÂÖ•È°πÁõÆ</p>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <!-- Ê∑ªÂä†ÊàêÂëòÊ®°ÊÄÅÊ°Ü -->
    <div class="modal fade" id="addMemberModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <form action="/projects/<%= project.id %>/members" method="POST">
                    <div class="modal-header">
                        <h5 class="modal-title">Ê∑ªÂä†ÊàêÂëò</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="userId" class="form-label">ÈÄâÊã©Áî®Êà∑</label>
                            <select class="form-select" id="userId" name="userId" required onchange="updateDefaultRoles()">
                                <option value="">ËØ∑ÈÄâÊã©Áî®Êà∑</option>
                                <% allUsers.forEach(user => { %>
                                    <option value="<%= user.id %>" data-default-role="<%= user.role || 'developer' %>">
                                        <%= user.firstName %> <%= user.lastName %> (@<%= user.username %>)
                                        - ËÅå‰∏öÔºö<%=
                                            user.role === 'admin' ? '‚ö° ÁÆ°ÁêÜÂëò' :
                                            user.role === 'product_manager' ? 'üîÆ ‰∫ßÂìÅÁªèÁêÜ' :
                                            user.role === 'developer' ? '‚öîÔ∏è ÂºÄÂèëÂ∑•Á®ãÂ∏à' :
                                            user.role === 'tester' ? 'üèπ ÊµãËØïÂ∑•Á®ãÂ∏à' :
                                            user.role === 'ui_designer' ? 'üîÆ UIÂ∑•Á®ãÂ∏à' :
                                            user.role === 'devops' ? '‚ú® ËøêÁª¥Â∑•Á®ãÂ∏à' :
                                            user.role === 'client' ? 'üíé ÂÆ¢Êà∑' : '‚öîÔ∏è ÂºÄÂèëÂ∑•Á®ãÂ∏à'
                                        %>
                                    </option>
                                <% }); %>
                            </select>
                            <div class="form-text">ÈÄâÊã©Áî®Êà∑ÂêéÔºåÂ∞ÜËá™Âä®ÈÄâ‰∏≠ÂÖ∂ÈªòËÆ§ËÅå‰∏öËßíËâ≤</div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">ËßíËâ≤</label>
                            <div class="row">
                                <div class="col-6">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="roles" value="developer" id="role-developer" checked>
                                        <label class="form-check-label" for="role-developer">ÂºÄÂèëÂ∑•Á®ãÂ∏à</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="roles" value="tester" id="role-tester">
                                        <label class="form-check-label" for="role-tester">ÊµãËØïÂ∑•Á®ãÂ∏à</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="roles" value="ui_designer" id="role-ui">
                                        <label class="form-check-label" for="role-ui">UIÂ∑•Á®ãÂ∏à</label>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="roles" value="product_manager" id="role-pm">
                                        <label class="form-check-label" for="role-pm">‰∫ßÂìÅÁªèÁêÜ</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="roles" value="devops" id="role-devops">
                                        <label class="form-check-label" for="role-devops">ËøêÁª¥Â∑•Á®ãÂ∏à</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="roles" value="client" id="role-client">
                                        <label class="form-check-label" for="role-client">ÂÆ¢Êà∑</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">ÂèñÊ∂à</button>
                        <button type="submit" class="btn btn-primary">Ê∑ªÂä†ÊàêÂëò</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="/js/bootstrap.bundle.min.js"></script>
    <script>
        function removeMember(userId, userName) {
            if (confirm(`Á°ÆÂÆöË¶ÅÁßªÈô§ÊàêÂëò ${userName} ÂêóÔºü`)) {
                fetch(`/projects/<%= project.id %>/members/${userId}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert(data.error || 'ÁßªÈô§ÊàêÂëòÂ§±Ë¥•');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('ÁßªÈô§ÊàêÂëòÂ§±Ë¥•');
                });
            }
        }

        function updateDefaultRoles() {
            const userSelect = document.getElementById('userId');
            const selectedOption = userSelect.options[userSelect.selectedIndex];

            if (selectedOption && selectedOption.value) {
                const defaultRole = selectedOption.getAttribute('data-default-role');

                // ÂÖàÂèñÊ∂àÊâÄÊúâÈÄâÊã©
                document.querySelectorAll('input[name="roles"]').forEach(checkbox => {
                    checkbox.checked = false;
                });

                // ÈÄâ‰∏≠ÈªòËÆ§ËßíËâ≤
                if (defaultRole) {
                    const defaultRoleCheckbox = document.querySelector(`input[name="roles"][value="${defaultRole}"]`);
                    if (defaultRoleCheckbox) {
                        defaultRoleCheckbox.checked = true;
                    }
                }
            }
        }
    </script>
</body>
</html>
