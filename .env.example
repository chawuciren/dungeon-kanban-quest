# 应用配置
NODE_ENV=development
PORT=3216
APP_NAME=任务管理

# 数据库配置
DB_TYPE=sqlite
DB_PATH=./database/kanban.db

# JWT配置
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRES_IN=7d

# 会话配置
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# 文件上传配置
UPLOAD_PATH=./public/uploads
MAX_FILE_SIZE=10485760

# 安全配置
BCRYPT_ROUNDS=12

# 日志配置
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# ==========================================
# 游戏化系统配置 - 每日签到奖励
# ==========================================

# 基础奖励（所有用户都获得）
DAILY_BASE_GOLD=20
DAILY_BASE_SILVER=50
DAILY_BASE_COPPER=0
DAILY_BASE_DIAMOND=0

# 委托贵族（客户）额外奖励
# 最终奖励 = 基础奖励 + 客户奖励
# 金币: 20 + 80 = 100
# 银币: 50 + 200 = 250
# 钻石: 0 + 1 = 1
DAILY_CLIENT_BONUS_GOLD=80
DAILY_CLIENT_BONUS_SILVER=200
DAILY_CLIENT_BONUS_COPPER=0
DAILY_CLIENT_BONUS_DIAMOND=1

# 管理员额外奖励
# 最终奖励 = 基础奖励 + 管理员奖励
# 金币: 20 + 50 = 70
# 银币: 50 + (-50) = 0 (管理员不获得银币)
# 钻石: 0 + 2 = 2
DAILY_ADMIN_BONUS_GOLD=50
DAILY_ADMIN_BONUS_SILVER=-50
DAILY_ADMIN_BONUS_COPPER=0
DAILY_ADMIN_BONUS_DIAMOND=2

# ==========================================
# 货币汇率配置
# ==========================================
CURRENCY_RATE_DIAMOND=1000
CURRENCY_RATE_GOLD=100
CURRENCY_RATE_SILVER=100

# ==========================================
# 游戏化奖励倍数配置
# ==========================================

# 星级奖励倍数
STAR_MULTIPLIER_1=1.0
STAR_MULTIPLIER_2=1.2
STAR_MULTIPLIER_3=1.5
STAR_MULTIPLIER_4=2.0
STAR_MULTIPLIER_5=3.0

# 紧急程度奖励倍数
URGENCY_MULTIPLIER_URGENT=1.5
URGENCY_MULTIPLIER_IMPORTANT=1.2
URGENCY_MULTIPLIER_NORMAL=1.0
URGENCY_MULTIPLIER_DELAYED=0.9
URGENCY_MULTIPLIER_FROZEN=0.0

# 技能等级奖励倍数
SKILL_MULTIPLIER_NOVICE=1.1
SKILL_MULTIPLIER_BRONZE=1.1
SKILL_MULTIPLIER_SILVER=1.15
SKILL_MULTIPLIER_GOLD=1.2
SKILL_MULTIPLIER_DIAMOND=1.3
